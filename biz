    <script>
        // Simulated database of providers
        const providers = [
            {
                id: 1,
                name: "Sarah Chen",
                type: "Financial Advisor",
                specialty: "Cash Flow Optimization",
                description: "Fractional CFO with 15+ years experience helping small businesses improve profitability and financial planning.",
                reason: "Your description suggests cash flow challenges that Sarah specializes in resolving.",
                matchStrength: "95%"
            },
            {
                id: 2,
                name: "Marcus Johnson",
                type: "Marketing Strategist",
                specialty: "Digital Customer Acquisition",
                description: "Growth marketer focused on scalable customer acquisition strategies for service-based businesses.",
                reason: "We detected opportunities to improve your marketing ROI and customer acquisition costs.",
                matchStrength: "88%"
            },
            {
                id: 3,
                name: "Dr. Elena Rodriguez",
                type: "Business Mentor",
                specialty: "Strategic Planning & Operations",
                description: "Former COO turned business mentor helping entrepreneurs systematize and scale their operations.",
                reason: "Your business stage would benefit from Elena's operational excellence framework.",
                matchStrength: "92%"
            },
            {
                id: 4,
                name: "James Wilson",
                type: "Sales Consultant",
                specialty: "Revenue Growth",
                description: "Sales transformation expert who helps businesses build predictable revenue engines.",
                reason: "We identified potential in optimizing your sales process and conversion rates.",
                matchStrength: "85%"
            }
        ];

        function analyzeBusiness() {
            // Show loading animation
            document.getElementById('loadingSection').style.display = 'block';
            document.getElementById('resultsSection').style.display = 'none';
            
            // Get form values
            const businessStage = document.getElementById('businessStage').value;
            const challengeArea = document.getElementById('challengeArea').value;
            const challengeDescription = document.getElementById('challengeDescription').value;
            
            // Validate form
            if (!businessStage || !challengeArea || !challengeDescription) {
                alert('Please fill in all fields to get accurate matches.');
                document.getElementById('loadingSection').style.display = 'none';
                return;
            }
            
            // Simulate AI processing time
            setTimeout(function() {
                displayMatches(businessStage, challengeArea, challengeDescription);
            }, 2000);
        }

        function displayMatches(stage, area, description) {
            // Hide loading, show results
            document.getElementById('loadingSection').style.display = 'none';
            document.getElementById('resultsSection').style.display = 'block';
            
            const matchCardsContainer = document.getElementById('matchCards');
            matchCardsContainer.innerHTML = '';
            
            // Filter providers based on challenge area (simplified logic)
            let filteredProviders = providers;
            if (area === 'finance') {
                filteredProviders = providers.filter(p => p.type.includes('Financial') || p.type.includes('CFO'));
            } else if (area === 'marketing') {
                filteredProviders = providers.filter(p => p.type.includes('Marketing'));
            } else if (area === 'sales') {
                filteredProviders = providers.filter(p => p.type.includes('Sales'));
            }
            
            // Display matches
            filteredProviders.forEach(provider => {
                const card = document.createElement('div');
                card.className = 'match-card';
                card.innerHTML = `
                    <h4>${provider.name}</h4>
                    <span class="match-type">${provider.type}</span>
                    <p class="match-details"><strong>Specialty:</strong> ${provider.specialty}</p>
                    <p class="match-details">${provider.description}</p>
                    <div class="match-reason">
                        <strong>Why this match:</strong> ${provider.reason}
                    </div>
                    <div style="margin-top: 15px; text-align: center;">
                        <button class="btn" onclick="contactProvider(${provider.id})" style="margin-right: 10px;">Contact ${provider.name.split(' ')[0]}</button>
                        <button class="btn" style="background: #95a5a6;" onclick="seeMoreProviders()">See More Like This</button>
                    </div>
                `;
                matchCardsContainer.appendChild(card);
            });
            
            // Scroll to results
            document.getElementById('resultsSection').scrollIntoView({ behavior: 'smooth' });
        }

        function contactProvider(providerId) {
            alert(`This would connect you to provider #${providerId} in a full implementation!\n\nIn the real app, this would:\n- Show provider contact details\n- Schedule an intro call\n- Start the onboarding process`);
        }

        function seeMoreProviders() {
            alert('In the full app, this would show more providers with similar expertise and specialties.');
        }
    </script>
